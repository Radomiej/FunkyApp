<UserControl x:Class="BaseApp.Views.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BaseApp.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel LastChildFill="True">
        <TabControl Name="LeftDockTabs" DockPanel.Dock="Left">
            <TabItem Header="Empty">
                <Label Content="Empty..." />
            </TabItem>
        </TabControl>
        <TabControl Name="RightDockTabs" DockPanel.Dock="Right">
            <TabItem Header="Empty">
                <Label Content="Empty..." />
            </TabItem>
        </TabControl>
        <TabControl Name="MainDockTabs">
            <TabItem Header="Empty">
                <local:JsonTextEditor></local:JsonTextEditor>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>
